<%= form_for(word) do |f| %>
  <% if word.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(word.errors.count, "error") %> prohibited this word from being saved:</h2>

      <ul>
      <% word.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :слово %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :визначення %>
    <%= f.text_area :definition,  size: "100x10"%>
  </div>

  <div class="field">
    <%= f.label :категрія %>
    <%= f.collection_select :word_category_id, WordCategory.all, :id, :name, prompt: true %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
